@page
@model LionPetManagement_StudentName.Pages.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
</head>
<body>
    <h2>Login</h2>

    <form method="post">
        <div>
            <label>Email:</label>
            <input asp-for="Email" />
        </div>
        <div>
            <label>Password:</label>
            <input asp-for="Password" type="password" />
        </div>
        <div style="color:red">@Model.ErrorMessage</div>
        <button type="submit">Login</button>
    </form>
</body>
</html>