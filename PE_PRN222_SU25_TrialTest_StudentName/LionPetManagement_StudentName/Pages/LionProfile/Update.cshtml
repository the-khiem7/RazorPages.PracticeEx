@page
@model LionPetManagement_StudentName.Pages.LionProfile.UpdateModel
@{
    ViewData["Title"] = "Update Lion Profile";
}

<h2>Update Lion Profile</h2>

<form method="post">
    <input asp-for="Input.LionProfileId" type="hidden" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Input.LionName" class="form-label"></label>
                <input asp-for="Input.LionName" class="form-control" />
                <span asp-validation-for="Input.LionName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Weight" class="form-label"></label>
                <input asp-for="Input.Weight" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="Input.Weight" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.LionTypeId" class="form-label">Lion Type</label>
                <select asp-for="Input.LionTypeId" asp-items="Model.LionTypes" class="form-control">
                    <option value="">-- Select Lion Type --</option>
                </select>
                <span asp-validation-for="Input.LionTypeId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Characteristics" class="form-label"></label>
                <textarea asp-for="Input.Characteristics" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Warning" class="form-label"></label>
                <textarea asp-for="Input.Warning" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

